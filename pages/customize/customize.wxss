.product-list .list-item {
  display: block;
  width: 50%;
  height: 360rpx;
  border-bottom: 1px solid #efefef;
  text-align: center;
  float: left;
}
.product-list .list-item:nth-child(odd) {
  border-right: 1px solid #efefef;
}
.product-list .list-item image {
  width: 70%;
  height: 70%;
}
.product-list .list-item text {
  display: block;
}
.no-data{
  text-align: center;
  margin-top: 100rpx;
}
