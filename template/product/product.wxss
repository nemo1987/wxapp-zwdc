.mask{
  width: 100%;
  height: 100%;
  background: rgba(0,0,0,0.5); 
  position: fixed;
  top:0;
  bottom:0;
  left:0;
  right:0;
  z-index:10;
}
.popup{
  position: fixed;
  bottom:0;
  left:0;
  z-index: 999;
  background: #fff;
  -webkit-transform: translateY(200%);
  -ms-transform: translateY(200%);
  transform: translateY(200%);
  -webkit-transition: all 0.4s;
  -o-transition: all 0.4s;
  transition: all 0.4s;   
}
.popup.popup-product{
  width: 100%;
  height: 486rpx;
}
.popup.active{
  -webkit-transform: translateY(0);
  -ms-transform: translateY(0);
  transform: translateY(0);
  -webkit-transition: all 0.4s;
  -o-transition: all 0.4s;
  transition: all 0.4s;
} 
.content-padding{
  padding:0 20rpx;
}
.product-name{
  width:100%;
  height: 120rpx;
}
.product-name>.image-box{
  background: #fff;
  width:220rpx;
  height: 214rpx;
  border:1px solid #efefef;
  position:absolute;
  top:-107rpx;
  left:24rpx;
}
.product-name>.image-box image{
  width:100%;
  height: 100%;
}
.product-name>.text-box{
  padding-left: 280rpx;
  margin-top:30rpx;
}
.form-item{
  margin-bottom: 30rpx;
}
.form-item>.label{
  min-width: 115rpx;
  margin-top:10rpx;
}
.button-box .button{
  margin-right:30rpx;
}
.button{
  display: inline-block;
  border:1px solid #efefef;
  border-radius: 5rpx;
  padding: 8rpx; 
}
.button.active{
  background: #0290ea;
  border-color:#0290ea;
  color: #fff;
}
.product-size .button{
  padding: 8rpx 30rpx;
  margin-bottom:15rpx;
}
.product-size .size-desc{
  width: 160rpx;
  flex-shrink: 0;
  flex-grow: 0;
  text-align: right;
  color:#0290ea;
}
.popup .footer{
  width:100%;
  position: fixed;
  left:0;
  bottom:0;
}
.button-block{
  display: block;
  height: 95rpx;
  line-height: 95rpx;
  background: #0290ea;
  color:#fff;
  text-align: center;
  font-size: 40rpx;
}